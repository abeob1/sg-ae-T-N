<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/appbg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#296894"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#296894"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView_evoita"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/logo"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_spa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/logospa"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_welcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/welcome"
                                android:textColor="@color/aqua"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right" >

                            <Button
                                android:id="@+id/button_ProcessCase1Walkin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Walk-in"
                                android:textColor="@color/royalBlue" />

                            <Button
                                android:id="@+id/button_ProcessCase1Find"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="Find"
                                android:textColor="@color/gray"  />

                            <Button
                                android:id="@+id/button_ProcessCase1Add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="Add"
                                android:textColor="@color/gray"  />

                            <Button
                                android:id="@+id/button_ProcessCase1Edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"                                
                                android:text="Edit"
                                android:textColor="@color/gray" />

                            <Button
                                android:id="@+id/button_ProcessCase1Confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="confirm"
                                android:textColor="@color/royalBlue" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ProcessCase1lineA"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/blueLight"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp" >

                                <TextView
                                    android:id="@+id/textView_ProcessCase1Case"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="Case"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="@color/blueLight"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/ProcessCase1lineB"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/blueLight"
                                    android:orientation="vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingBottom="1dp"
                                android:paddingTop="1dp" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:paddingBottom="1dp"
                                        android:paddingLeft="@dimen/paddingLeft_five"
                                        android:paddingRight="@dimen/paddingRight_five"
                                        android:paddingTop="1dp" >

                                        <TextView
                                            android:id="@+id/textView_type"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:text="Case Type:"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/activity_small_textsize" />

                                        <EditText
                                            android:id="@+id/case_type"
                                            android:layout_width="fill_parent"
                                            android:layout_height="20dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="1"
                                            android:background="@drawable/rounded_big"
                                            android:ems="10"
                                            android:hint="@string/hints"
                                            android:inputType="text"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/activity_small_textsize" >
                                        </EditText>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:paddingBottom="1dp"
                                        android:paddingLeft="@dimen/paddingLeft_five"
                                        android:paddingRight="@dimen/paddingRight_five"
                                        android:paddingTop="1dp" >

                                        <TextView
                                            android:id="@+id/textView_ProcessCase1CaseFileNo"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="left"
                                            android:text="Case File No:"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/activity_small_textsize" />

                                        <EditText
                                            android:id="@+id/editText_ProcessCase1CaseFileNo"
                                            android:layout_width="fill_parent"
                                            android:layout_height="20dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:layout_weight="1"
                                            android:background="@drawable/rounded_big"
                                            android:ems="10"
                                            android:hint="@string/hints"
                                            android:inputType="text"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:singleLine="true"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/activity_small_textsize" >
                                        </EditText>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="@dimen/paddingLeft_five"
                                    android:paddingRight="@dimen/paddingRight_five"
                                    android:paddingTop="1dp" >

                                    <TextView
                                        android:id="@+id/textView_status"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:text="Case Status:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/activity_small_textsize" />

                                    <Spinner
                                        android:id="@+id/case_status"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:clickable="true"
                                        android:cursorVisible="true"
                                        android:ems="10"
                                        android:enabled="true"
                                        android:focusable="true"
                                        android:textColor="@color/gray" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="@dimen/paddingLeft_five"
                                    android:paddingRight="@dimen/paddingRight_five"
                                    android:paddingTop="1dp" >

                                    <TextView
                                        android:id="@+id/textView_ProcessCase1KIV"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:text="KIV:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/activity_small_textsize" />

                                    <Spinner
                                        android:id="@+id/spinner_ProcessCase1KIV"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:clickable="true"
                                        android:cursorVisible="true"
                                        android:ems="10"
                                        android:enabled="true"
                                        android:focusable="true"
                                        android:textColor="@color/gray" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="@dimen/paddingLeft_five"
                                    android:paddingRight="@dimen/paddingRight_five"
                                    android:paddingTop="1dp" >

                                    <TextView
                                        android:id="@+id/textView_ProcessCase1FileOpenDate"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/paddingLeft_five"
                                        android:paddingRight="@dimen/paddingRight_five"
                                        android:text="File Open Date:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/activity_small_textsize" />

                                    <EditText
                                        android:id="@+id/editText_ProcessCase1FileOpenDate"
                                        android:layout_width="fill_parent"
                                        android:layout_height="20dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_weight="1"
                                        android:background="@drawable/rounded_big"
                                        android:ems="10"
                                        android:hint="@string/hints"
                                        android:inputType="text"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/activity_small_textsize" >
                                    </EditText>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/paddingTop_five" >

                            <Button
                                android:id="@+id/button_ProcessCase1Details"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:text="Details"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcessCase1Purchaser"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:text="Purchaser"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcessCase1Vendor"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:text="Vendor"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcesCase1Property"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:clickable="false"
                                android:text="Property"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcessCase1LoanPrincipal"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:clickable="false"
                                android:text="Loan-Principal"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcesCase1LoanSubsidiary"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn"
                                android:clickable="false"
                                android:text="Loan-Subsidiary"
                                android:textColor="@color/black" />

                            <Button
                                android:id="@+id/button_ProcessCase1Process"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:background="@drawable/btn_press"
                                android:clickable="false"
                                android:text="Process"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textview_processname"
                        android:layout_width="400dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Open Process and Remarks"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_action"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Action"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_lastupdate"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_status"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Last Update"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_statusdate"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Status Date"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_actiontype"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Action Type"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textview_forwardto"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="Forward to"
                        android:textColor="@color/white" />
                </LinearLayout>

                <ListView
                    android:id="@+id/listview_process"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:paddingTop="2dp" >
                </ListView>
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_pastsections"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PAST SECTIONS"
                        android:background="@color/blueLight"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_nextsection"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/blueLight"
                        android:text="NEXT SECTION"
                        android:visibility="visible"
                        android:textColor="@color/white" />
                    
                     <Button
                        android:id="@+id/button_opensection"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/blueLight"
                        android:visibility="invisible"
                        android:text="OPEN SECTION"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_addoptional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ADD OPTIONAL"
                         android:background="@color/blueLight"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_viewfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="VIEW FILE"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                         android:background="@color/blueLight"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/button_processstep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="PROCESS STEP"
                         android:background="@color/blueLight"
                        android:textColor="@color/white" />
                </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="#5b5b5b"
        android:dividerHeight="1dp"
        android:paddingBottom="@dimen/paddingBottom_twenty"        
        android:paddingTop="@dimen/paddingTop_twenty" />


</android.support.v4.widget.DrawerLayout>