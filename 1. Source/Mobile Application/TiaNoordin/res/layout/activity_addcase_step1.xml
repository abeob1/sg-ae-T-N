<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/appbg" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#296894"  >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/textView_evoita"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/logo"
                                android:textColor="@color/white"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_spa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/logospa"
                                android:textColor="@color/aqua"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_welcome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="@string/welcome"
                                android:textColor="@color/aqua"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            
                            android:gravity="right" >

                            <Button
                                android:id="@+id/button_AddCaseStep1Walkin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Walk-in"
                                android:textColor="@color/royalBlue" />

                            <Button
                                android:id="@+id/button_AddCaseStep1Find"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="Find"
                                android:textColor="@color/gray" />

                            <Button
                                android:id="@+id/button_AddCaseStep1Add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="Add"
                                android:textColor="@color/gray" />

                            <Button
                                android:id="@+id/button_AddCaseStep1Edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="Edit"
                                android:textColor="@color/gray" />

                            <Button
                                android:id="@+id/button_AddCaseStep1Confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:text="confirm"
                                android:textColor="@color/gray" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lineA"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/blueLight"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView_question1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Add Case - Step 1 of 4 : Choose Document"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_medium_textsize"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/lineC"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/blueLight"
                        android:orientation="vertical" />
                </LinearLayout>
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/paddingLeft_twenty"
                    android:paddingRight="@dimen/paddingRight_twenty" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/paddingLeft_five"
                        android:paddingRight="@dimen/paddingRight_five" >
<!-- 
                        <Button
                            android:id="@+id/button_AddCaseStep1ChooseDoc"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:text="Choose Document to Read"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:background="@drawable/rcbtn" />
                             -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/paddingBottom_ten"
                        android:paddingLeft="@dimen/paddingLeft_ten"
                        android:paddingRight="@dimen/paddingRight_ten"
                        android:paddingTop="@dimen/paddingTop_ten" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/listHeader_height"
                                android:background="@color/blueLight" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:layout_weight="1"
                                    android:background="@color/black"
                                    android:paddingRight="@dimen/paddingRight_listtext_two" >

                                    <TextView
                                        android:id="@+id/listAddCaseHeader_ItemCode"
                                        android:layout_width="50dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:background="@color/blueAqua"
                                        android:gravity="center_vertical|left"
                                        android:paddingLeft="@dimen/paddingLeft_five"
                                        android:text="Item Code"
                                        android:textColor="@color/black"
                                        android:textSize="14dp" >
                                    </TextView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:layout_weight="1"
                                    android:background="@color/black"
                                    android:paddingLeft="@dimen/paddingLeft_listtext_two"
                                    android:paddingRight="@dimen/paddingRight_listtext_two" >

                                    <TextView
                                        android:id="@+id/listheader_ItemName"
                                        android:layout_width="50dp"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="1"
                                        android:background="@color/blueAqua"
                                        android:gravity="center_vertical|left"
                                        android:paddingLeft="@dimen/paddingLeft_five"
                                        android:text="Item Name"
                                        android:textColor="@color/black"
                                        android:textSize="14dp" >
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>

                            <ListView
                                android:id="@+id/listview_addCaseStep1Doc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="2dp"
                                >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/paddingBottom_ten"
                        android:paddingLeft="@dimen/paddingLeft_ten"
                        android:paddingRight="@dimen/paddingRight_ten"
                        android:paddingTop="@dimen/paddingTop_ten" >

                        <TextView
                            android:id="@+id/textview"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Get File Name From Storage"
                            android:textColor="@color/white" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/paddingLeft_ten"
                            android:paddingRight="@dimen/paddingRight_ten" >

                            <EditText
                                android:id="@+id/editText_AddCaseStep1Browse"
                                android:layout_width="fill_parent"
                                android:layout_height="45dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="5dp"
                                android:layout_toLeftOf="@+id/button_AddCaseStep1Browser"
                                android:background="@drawable/rounded"
                                android:ems="10"
                                android:hint="Browse file..."
                                android:inputType="textPersonName" >

                            </EditText>

                            <Button
                                android:id="@+id/button_AddCaseStep1Browser"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="Browser"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:background="@drawable/rcbtn"  >
                            </Button>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/messageText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/paddingBottom_ten"
                        android:paddingLeft="@dimen/paddingLeft_ten"
                        android:paddingRight="@dimen/paddingRight_ten"
                        android:paddingTop="@dimen/paddingTop_ten" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/button_AddCaseStep1Ok"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/marginTop_five"
                                    android:onClick="getfile"
                                    android:text="OK"
                                    android:padding="10dp"
                                android:textColor="@color/white"
                                android:background="@drawable/rcbtn">
                                </Button>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/button_AddCaseStep1Cancle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/marginTop_five"
                                    android:onClick="getfile"
                                    android:text="Cancel"
                                    android:padding="10dp"
                                android:textColor="@color/white"
                                android:background="@drawable/rcbtn" >
                                </Button>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#1a1a1a"
        android:choiceMode="singleChoice"
        android:divider="#1a1a1a"
        android:dividerHeight="10dp"
        android:paddingBottom="@dimen/paddingBottom_twenty"
        android:paddingLeft="@dimen/paddingLeft_twenty"
        android:paddingRight="@dimen/paddingRight_twenty"
        android:paddingTop="@dimen/paddingTop_twenty" />

</android.support.v4.widget.DrawerLayout>