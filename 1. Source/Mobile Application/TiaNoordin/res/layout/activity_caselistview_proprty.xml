<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           
            android:orientation="vertical"
            android:background="@drawable/appbg" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView_evoita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/logo"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_spa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logospa"
                            android:textColor="@color/aqua"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/welcome"
                            android:textColor="@color/aqua"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/relativeLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        
                        android:gravity="right" >

                        <Button
                            android:id="@+id/button_walkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="Walk-in"
                            android:textColor="@color/gray" />

                        <Button
                            android:id="@+id/button_find"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="Find"
                            android:textColor="@color/gray" />

                        <Button
                            android:id="@+id/button_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="Add"
                            android:textColor="@color/gray" />

                        <Button
                            android:id="@+id/button_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="Edit"
                            android:textColor="@color/gray" />

                        <Button
                            android:id="@+id/button_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:text="confirm"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lineA"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/blueLight"
                    android:orientation="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/paddingLeft_ten"
                android:paddingRight="@dimen/paddingRight_ten"
                android:paddingTop="@dimen/paddingTop_ten" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/paddingRight_listtext_two" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/listHeader_height"
                        android:background="@color/blueLight" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHader_caseFileNo"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Case File No"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_relatedFileNo"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Related File No"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_branchCode"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Branch Code"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_FileOpendDate"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="File Opend Date"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_iC"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="IC"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_caseType"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Case Type"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_clientName"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="1st Client Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_Bank"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Bank"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_lotPTDPTNo"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Lot/PTD/PT No"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_caseAmount"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Case Amount"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_userCode"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="User Code"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_status"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Status"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingLeft="@dimen/paddingLeft_listtext_two"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listCaseHeader_fileClosedDate"
                                android:layout_width="50dp"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="File Closed Date"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textsize_listheader" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listview_RelatedCaseList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="#5b5b5b"
        android:dividerHeight="1dp"
        android:paddingBottom="@dimen/paddingBottom_twenty"        
        android:paddingTop="@dimen/paddingTop_twenty" />

</android.support.v4.widget.DrawerLayout>