<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#444444"
    android:orientation="vertical"
    android:padding="10sp" >

    <Button
        android:id="@+id/btn_close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/paddingBottom_ten"
                android:paddingLeft="@dimen/paddingLeft_ten"
                android:paddingRight="@dimen/paddingRight_ten"
                android:paddingTop="@dimen/paddingTop_ten" >

                <LinearLayout
                    android:layout_width="699dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/paddingRight_listtext_two" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/listHeader_height"
                        android:background="@color/blueLight" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:paddingRight="@dimen/paddingRight_listtext_two" >

                            <TextView
                                android:id="@+id/listheader_titletype"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/blueAqua"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="PROCESS STEP"
                                android:textColor="@color/black"
                                android:textSize="@dimen/activity_large_textsize" >
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="699dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large Text"
                        android:textColor="#000"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                    <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large Text"
                     android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                         android:layout_marginBottom="5dp"
                         
                         android:orientation="horizontal" >

                                                    <EditText
                                                        android:id="@+id/remarkss"
                                                        android:layout_width="576dp"
                                                        android:layout_height="35dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:background="@drawable/rounded_big_black"
                                                        android:clickable="true"
                                                        android:cursorVisible="true"
                                                        android:ems="10"
                                                        android:enabled="true"
                                                        android:focusable="true"
                                                        android:hint="Text"
                                                        android:inputType="text"
                                                        android:singleLine="true"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/activity_small_textsize" >

                                                    </EditText>

                                                    <Button
                                                        android:id="@+id/save"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/rcbtn"
                                                        android:text="SAVE"
                                                        android:textColor="@color/white"
                                                        android:textSize="@dimen/activity_small_textsize" />
                                                  
                                                </LinearLayout>
                                                
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="right"
                           android:layout_marginBottom="5dp"
                           
                           android:orientation="horizontal" >

                                                    <EditText
                                                        android:id="@+id/uploadtext"
                                                        android:layout_width="465dp"
                                                        android:layout_height="35dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:background="@drawable/rounded_big_black"
                                                        android:clickable="true"
                                                        android:cursorVisible="true"
                                                        android:ems="10"
                                                        android:enabled="true"
                                                        android:focusable="true"
                                                        android:hint="Text"
                                                        android:inputType="text"
                                                        android:singleLine="true"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/activity_small_textsize" >

                                                    </EditText>

                                                    <Button
                                                        android:id="@+id/browse"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/rcbtn"
                                                        android:text="BROWSER"
                                                        android:textColor="@color/white"
                                                        android:textSize="@dimen/activity_small_textsize" />

                                                     <Button
                                                         android:id="@+id/upload"
                                                         android:layout_width="112dp"
                                                         android:layout_height="wrap_content"
                                                         android:background="@drawable/rcbtn"
                                                         android:text="Upload"
                                                         android:textColor="@color/white"
                                                         android:textSize="@dimen/activity_small_textsize" />
                                                  
                                                </LinearLayout>
                                                
                         <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_gravity="right"
                             android:layout_marginBottom="5dp"
                             
                             android:orientation="horizontal" >

                                                    <EditText
                                                        android:id="@+id/BROWSER2text"
                                                        android:layout_width="465dp"
                                                        android:layout_height="35dp"
                                                        android:layout_centerHorizontal="true"
                                                        android:layout_centerVertical="true"
                                                        android:background="@drawable/rounded_big_black"
                                                        android:clickable="true"
                                                        android:cursorVisible="true"
                                                        android:ems="10"
                                                        android:enabled="true"
                                                        android:focusable="true"
                                                        android:hint="Text"
                                                        android:inputType="text"
                                                        android:singleLine="true"
                                                        android:textColor="@color/black"
                                                        android:textSize="@dimen/activity_small_textsize" >

                                                    </EditText>

                                                    <Button
                                                        android:id="@+id/BROWSER2"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/rcbtn"
                                                        android:text="BROWSER"
                                                        android:textColor="@color/white"
                                                        android:textSize="@dimen/activity_small_textsize" />

                                                     <Button
                                                         android:id="@+id/genareate"
                                                         android:layout_width="112dp"
                                                         android:layout_height="wrap_content"
                                                         android:background="@drawable/rcbtn"
                                                         android:text="GENERATE"
                                                         android:textColor="@color/white"
                                                         android:textSize="@dimen/activity_small_textsize" />
                                                  
                                                </LinearLayout>
                                                
                         
                         
                          <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                         android:layout_marginBottom="5dp"
                         
                         android:orientation="horizontal" >

                                                      <Spinner
                                                          android:id="@+id/status"
                                                          android:spinnerMode="dialog"
                                                          android:layout_width="247dp"
                                                          android:layout_height="wrap_content"
                                                          android:layout_gravity="right"
                                                          android:background="@drawable/rounded_big_black"
                                                          android:clickable="true"
                                                          android:cursorVisible="true"
                                                          android:ems="10"
                                                          android:enabled="true"
                                                          android:focusable="true"
                                                          android:textColor="@color/black"
                                                          android:visibility="visible" />

                                                     <Button
                                                         android:id="@+id/updatestatus"
                                                         android:layout_width="112dp"
                                                         android:layout_height="wrap_content"
                                                         android:layout_gravity="right|center_horizontal"
                                                         android:background="@drawable/rcbtn"
                                                         android:text="UPDATE STATUS"
                                                         android:textColor="@color/white"
                                                         android:textSize="@dimen/activity_small_textsize" />
                                                  
                                                </LinearLayout>
                                                
                            <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                         android:layout_marginBottom="5dp"
                         
                         android:orientation="horizontal" >

                                                     

                                                     <Button
                                                         android:id="@+id/createbilling"
                                                         android:layout_width="112dp"
                                                         android:layout_height="wrap_content"
                                                         android:layout_gravity="right|center_horizontal"
                                                         android:background="@drawable/rcbtn"
                                                         android:text="CREATE BILLING"
                                                         android:textColor="@color/white"
                                                         android:textSize="@dimen/activity_small_textsize" />
                                                  
                                                </LinearLayout>
                                                
                             <LinearLayout
                             android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="right"
                         android:layout_marginBottom="5dp"
                         android:layout_weight="1"
                         android:orientation="horizontal" >

                                                     

                                                     <Button
                                                         android:id="@+id/alternative"
                                                         android:layout_width="112dp"
                                                         android:layout_height="wrap_content"
                                                         android:layout_gravity="right|center_horizontal"
                                                         android:background="@drawable/rcbtn"
                                                         android:text="ALTERNATIVE"
                                                         android:textColor="@color/white"
                                                         android:textSize="@dimen/activity_small_textsize" />
                                                     
                                                      
                                                  
                                                </LinearLayout>
                    
                </LinearLayout>

                

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>